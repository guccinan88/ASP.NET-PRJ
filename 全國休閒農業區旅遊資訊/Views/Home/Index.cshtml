@model IEnumerable<WebApplication12.Models.FarmAttractions>
@{
    ViewBag.Title = "全國休閒農業區旅遊網";
}

<h2>全國休閒農業區旅遊網</h2>
<form method="post" action="@Url.Action("Index")">
    <p>
        <select name="selectCity" class="form-control">
        <option>選擇城市</option>
            @foreach (var item in ViewBag.City)
            {
                <option>@item</option>
            }
        </select>
        <button class="btn btn-default">送出</button>
    </p>
</form>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-md-4" style="margin-top:10px;">
            <div class="img-thumbnail">
                <img src="@item.Photo" class="img-responsive" style="width:100%;height:210px" />
                <h4>@item.Name</h4>
                <p>電話:@item.Tel</p>
                <p>地址:@item.Address</p>
                <p><a href="https://www.google.com/maps/place/@item.Address" target="_blank">開啟地圖</a></p>
            </div>
        </div>
    }
</div>

